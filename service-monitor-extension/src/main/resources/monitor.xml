<?xml version="1.0" encoding="UTF-8"?>
<monitor>
    <name>AIXServiceMonitor</name>
    <type>managed</type>
    <description>AIX Service Monitoring Extension</description>
    <monitor-configuration></monitor-configuration>
    <monitor-run-task>
        <execution-style>periodic</execution-style>
        <execution-frequency-in-seconds>60</execution-frequency-in-seconds>
        <name>AIX Service Monitor Run Task</name>
        <display-name>AIX Service Monitor Run Task</display-name>
        <description>AIX Service Monitor Run Task</description>
        <type>java</type>
        <java-task>
            <classpath>aix-service-monitor.jar</classpath>
            <impl-class>com.appdynamics.extensions.aix.service.AIXServiceMonitor</impl-class>
            <task-arguments>
                <argument name="config-file" is-required="true" default-value="monitors/AIXServiceMonitor/config.yml"/>
            </task-arguments>
            <jvm-options>
            </jvm-options>
        </java-task>
    </monitor-run-task>
</monitor>